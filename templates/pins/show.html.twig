{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ pin.title }} Pin{% endblock %}

{% block body %}

<h1>{{ pin.title }}</h1>

<p>{{ pin.description }}</p>
<a href="{{ path('app_pins_edit', {id: pin.id})}}">Editer</a>
<a href="#" onclick="event.preventDefault(); confirm('Veuillez confirmer pour supprimer') && document.querySelector('#js-pin-delete-form').submit();">Supprimer</a>
<a href="{{ path('app_home')}}">Go back</a>


<form id="js-pin-delete-form" method="POST" action="{{ path('app_pins_delete', {id: pin.id})}}" style="display: none;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_delete_' ~ pin.id) }}">
</form>
{% endblock %}
